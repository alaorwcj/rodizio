# Variáveis de Ambiente - Exemplo
# Copie este arquivo para .env e preencha com valores reais

# Database
DATABASE_URL=postgresql://rodizio_user:SENHA_AQUI@localhost:5432/rodizio
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rodizio
DB_USER=rodizio_user
DB_PASSWORD=SENHA_AQUI

# Flask
SECRET_KEY=gere-uma-chave-secreta-aqui
FLASK_ENV=development

# Migração
USE_POSTGRES=false  # Alterar para true após validar migração
PERSISTENCE=json    # json ou postgres

# Backup
BACKUP_DIR=data/backups
